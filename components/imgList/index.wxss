/* components/imgList/index.wxss */
.img-wrap{
  width: 100%;
  font-size: 0;
  padding: 10rpx 0;
}
.img-wrap-1 .img-item {
    width: 100%;
    height: 496rpx;
}
.img-wrap-2 .img-item {
  box-sizing: border-box;
    width: 50%;
    height:241.5rpx;
    margin-bottom: 16rpx;
}
.img-wrap-2 .img-item:nth-child(2n){
  padding-left:8rpx;
}
.img-wrap-2 .img-item:nth-child(2n-1){
  padding-right:8rpx;
}
.img-wrap-3 .img-item {
  box-sizing: border-box;
    width: 33.33%;
    height: 160rpx;
    margin-bottom: 10rpx;
}
.img-wrap-3 .img-item:nth-child(3n){
  padding-left: 7.5rpx;
}
.img-wrap-3 .img-item:nth-child(3n-2){
padding-right: 7.5rpx;
}
.img-wrap-3 .img-item:nth-child(3n-1){
  padding: 0 3.75rpx;
}