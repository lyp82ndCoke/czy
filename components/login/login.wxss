/* template/login/login.wxss */
@import "../../app.wxss";

.login-wrap {
  z-index: 1000;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, .6);
}

.login-content-wrap {
  margin: 267rpx auto;
  border-radius: 20rpx;
  width: 580rpx;
  text-align: center;
  background-color: #fff;
  padding-top: 60rpx;
}

.login-title {
  font-size: 36rpx;
  font-weight: 500;
  color: rgba(17, 17, 17, 1);
  /* line-height: 36rpx; */
}

.login-logo {
  margin-top: 30rpx;

}

.login-img {
  width: 140rpx;
  height: 140rpx;
}

.login-text1 {
  margin-top: 30rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
}

.login-text2 {
  margin: 28rpx 0 58rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.login-btn-wrap {
  border-top: 1rpx solid rgba(170, 170, 170, 1);
  font-size: 32rpx;
  line-height: 110rpx;
  color: rgba(102, 102, 102, 1);
  overflow: hidden;
}

.login-btn {
  float: left;
  display: inline-block;
  width: 50%;
}

.login-cancel {
  border-right: 1px solid rgba(170, 170, 170, 1);
}

.login-true {
  box-sizing: border-box;
  font-size: 32rpx;
  line-height: 110rpx;
  color: #E05961;
  border-radius: 0 0 20rpx 0;
}

