/* 步骤条 */

.steps_box{
  width: 100%;
  margin-top: 20rpx;
  padding: 0 110rpx;
}
.step-slider-item {
  width: 50%;
  height: 6rpx;
  position: relative;
  float: left;
  background-color: #FFD3B9;
  z-index: 1;
}
.active-item{
  background-color: rgba(255, 153, 81, 1);
}
.active-item::after{
  background-color: rgba(255, 153, 81, 1) !important;
}
.step-slider-item::after {
  content: "";
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  top: -4px;
  right: 0;
  background-color: #FFD3B9;
  border-radius: 50%;
  z-index: 5;
}
.slider-first::before {
  content: "";
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  top: -4px;
  left: 0;
  background-color: rgba(255, 153, 81, 1);
  border-radius: 50%;
  z-index: 5;
}
