.rank-share-tips{
    margin-top: 20rpx;
    background-color: #FF9951;
    padding: 20rpx;
}
.laba-sty{
    margin: 5rpx 14rpx 0 0rpx;
    font-size: 24rpx;
    color:#fff;
    align-self: baseline;
}
.tips-text{
    font-size:24rpx;
    font-weight:400;
    color: #fff;
}

.rank-total-msg{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    padding-bottom: 58rpx;
    position: relative;
    left: 0;
    top: 0;
    margin: 75rpx 32rpx 0;
    background:rgba(255,228,220,1);
    border-radius:24rpx 24rpx 0px 0px;
}
.user-icon{
    width:106rpx;
    height:106rpx;
    border-radius:50%;
    position: absolute;
    left: 50%;
    top: -53rpx;
    transform: translateX(-50%);
    -ms-transition: translateX(-50%);
    -webkit-transition: translateX(-50%);
    -moz-transition: translateX(-50%);
}
.rank-num{
    font-size:32rpx;
    font-weight:400;
    color:rgba(102,102,102,1);
    margin-top: 74rpx;
}
.rank-num-sty{
    color: #333333;
}
.count-time-wrap{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: row;
    margin-top: 29rpx;
}
.shalou-sty{
    color: #FF9951;
    font-size: 30rpx;
    margin-right: 10rpx;
}
.task-end-sty{
    font-size:28rpx;
    font-weight:500;
    color:rgba(255,153,81,1);
}
.count-color{
    color:rgba(255,153,81,1);
}
.total-num{
    font-size:28rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(102,102,102,1);
}
.count-num{
    font-size: 32rpx;
    background-color: rgba(255,153,81,1);
    color: #fff;
    border-radius: 8rpx;
    margin: 0 15rpx;
    padding: 0 7rpx;

}
.paren-task{
    margin: 30rpx 0 20rpx;
}
.num-color{
    color: #333;
}
.rank-share-content{
    background-color: #fff;
    margin:0 32rpx;
    padding: 28rpx 25rpx 25rpx;
    box-shadow:0px 8rpx 8rpx 0rpx rgba(240,240,240,1);
    border-radius:0px 0px 24rpx 24rpx;
}
.time-limit-activity{
    border-radius: 20rpx;
    padding: 0;
    margin: 0;
    overflow: hidden;
    font-size: 0;
    position: relative;
    left: 0;
    right: 0;
}
.time-limit-activity::after, .time-limit-activity::after, .time-limit-activity::after{
    border: none;
    outline: none;
}
.limit-activity-img{
    width: 100%;
    height:259rpx;
    border-radius:20rpx 20rpx 0 0;
}
.time-limit-tag{
    width:106rpx;
    height:36rpx;
    background:rgba(255,210,113,1);
    border-radius:20rpx 0 20rpx 0;
    text-align: center;
    line-height: 36rpx;
    font-size:20rpx;
    font-weight:500;
    color:rgba(255,255,255,1);
    position: absolute;
    left: 0;
    top: 0;
}
.query-btn{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: row;
    height:68rpx;
    background:rgba(230,0,57,1);
    border-radius:0px 0px 20rpx 20rpx;
    color:#fff;
    margin: 0;
    padding: 0;
}
.btn-text{
    font-size:32rpx;
    font-weight:600;
    color:rgba(255,255,255,1);
    margin-left: 19rpx;
}
.tianxie-sty{
    font-size: 35rpx;
}
.day-item-content{
    background-color: #F8F8F8;
    margin-top: 20rpx;
    border-radius: 20rpx;
}
.day-item-content:first-child{
    margin-top: 0;
}
.rank-content-title{
    height:27rpx;
    line-height:27rpx ;
    border-left: 4px solid rgba(255,153,81,1);
    padding-left: 20rpx;
    margin: 39rpx 0 30rpx 0;
    font-size:32rpx;
    font-weight:500;
    color:rgba(51,51,51,1);
}
.task-item-wrap{
    padding: 0 18rpx 20rpx;
}
.task-item{
    margin-top: 39rpx;
    padding-bottom: 19rpx;
    border-bottom: 1rpx solid #DDDDDD;
}
.task-item:last-child{
    border-bottom: none;
}
.task-detail{
    font-size:28rpx;
    font-weight:400;
    color:rgba(51,51,51,1);
    line-height: 1.5;
}
.time-day-tag{
    width: 106rpx;
    height: 36rpx;
    background: rgba(255,210,113,1);
    border-radius: 20rpx 0 20rpx 0;
    text-align: center;
    line-height: 36rpx;
    font-size: 20rpx;
    font-weight: 500;
    color: rgba(255,255,255,1);
}
.item-tag-font{
    font-size: 24rpx;
}
.task-item-bottom{
    font-size:24rpx;
    font-weight:400;
    color:rgba(153,153,153,1);
    margin-top: 39rpx;
}
.partic-num{
    color: #666666;
}
.jion-task{
    width:200rpx;
    height:60rpx;
    padding: 0;
    margin: 0;
    background:linear-gradient(0deg,rgba(230,0,57,1),rgba(242,81,121,1));
    border-radius:30rpx 0px 0px 30rpx;
    text-align: center;
    line-height: 60rpx;
    font-size:28rpx;
    font-weight:400;
    color:rgba(255,255,255,1);
    position: fixed;
    right: 0;
    bottom: 260rpx;
}