/* 365course/pages/course_detail/course_detail.wxss */
/* @import '../../../wxParse/wxParse.wxss'; */

page {
  width: 100%;
  background: #fff;
  height: 100%;
  /* overflow: hidden; */
}
.course-content{
  width: 100%;
  border-top:20rpx solid #f7f4f8;
}
.rich-text view{
  max-width: 100% !important;
}
img{
  max-width: 100% !important;
}
.course-detail {
  /* height: 100%; */
 /* overflow: auto; */
  width: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
   background: #fff;
   padding-bottom: 96rpx;
}

.cours-top {
  padding-top: 10rpx;
  display: flex;
  justify-content: flex-start;
  padding: 0 20rpx;
  margin-top: 20rpx;
}

.cours-top-time {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 37rpx;
}

.cours-top-time .bofang-num-icon {
  font-size: 20rpx;
  margin-right: 20rpx;
}

.cours-top view view {
  margin-bottom: 10rpx;
}

.cours-top-font1 {
  font-size: 35rpx;
}

.cours-top-font2 {
  font-size: 26rpx;
  color: #a4a4a4;
}

.cours-top-font3 {
  width: 15%;
  font-size: 30rpx;
  color: #a4a4a4;
  display: flex;
  align-items: center;
  justify-content: center;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}

.cours-time {
  margin-right: 20rpx;
}

.cours-music {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  padding: 20rpx;
   box-sizing: border-box;
  flex-direction: column;
  margin: 40rpx 0 20rpx;
}

.course-slider {
  margin: 0rpx 10rpx;
  width: 68%;
  padding: 0 20rpx;
  background: #ecebeb;
  height: 39rpx;
  border-radius: 5rpx;
}

.course-music-v {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-bottom: 40rpx;
}

.course-music-v view {
  /* width: 70rpx; */
}

.course-desc {
  display: flex;
  align-content: center;
  justify-content: center;
  padding: 0 20rpx;
  position: relative;
  margin-bottom: 40rpx;
  margin-top: 50rpx;
  overflow: hidden;
  padding-bottom: 70rpx;
}

.course-desc-v {
  position: absolute;
  bottom: 10rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 40rpx;
}

.course-desc-v image {
  width: 30rpx;
}

.course-comment {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: flex-start;
  box-sizing: border-box;
  padding: 0 20rpx;
  margin: 30rpx 0;
  overflow: hidden;
}

.course-comment-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.course-comment-top-left {
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.course-comment-top-left-num {
  margin-left: 20rpx;
  line-height: -30rpx;
}

.course-comment-top-right text {
  margin: 0 7rpx;
}

.course-music-button {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  background: #c9c9c9;
}

.course-music-button image {
  margin: 0 70rpx;
  z-index: 9;
  overflow: visible !important;
}

.bofang-icon{
  font-size: 80rpx;
}
.pf {
  width: 80rpx !important;
  height: 80rpx !important;
}

.pre {
  height: 60rpx !important;
  width: 60rpx !important;
}

.active {
  color: #fb643b;
}

.comment-none {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 350rpx;
  flex-direction: column;
}

.comment-none image {
  width: 160rpx;
  margin-bottom: 30rpx;
}

/* 视频插件 css*/

.video-component {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.course-video {
  margin: 40rpx 0 20rpx;
}

.course-video > view {
  height: 390rpx;
}

.course-video video {
  width: 100%;
  height: 390rpx;
}

