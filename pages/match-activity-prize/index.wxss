.prize-wrap{
    padding-bottom: 36rpx;
}
.activity-top{
    height:145rpx;
    background:linear-gradient(0deg,rgba(230,0,57,1) 0%,rgba(242,81,121,1) 100%);
    display: flex;
    justify-content: center;
    align-items: center;
}
.top-line{
    width:64rpx;
    height:1rpx;
    background:rgba(255,255,255,1);
}
.task-name{
    font-size:32rpx;
    font-weight:600;
    color:rgba(255,255,255,1);
    margin: 0 20rpx;
    text-shadow:0px 2rpx 7rpx rgba(0, 0, 0, 0.2);
}
.prize-list{
    margin: 20rpx 36rpx 0rpx;
}
.prize-item-wrap{
    background:rgba(255,255,255,1);
    box-shadow:0px 6rpx 8rpx 0px rgba(240,240,240,1);
    border-radius:24rpx;
    margin-top: 20rpx;
}
.prize-item{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: row;
    padding: 20rpx 0 40rpx;
}
.prize-data{
    padding: 0 30rpx;
}
.prize-bto-border{
    width: 100%;
    height: 1rpx;
    border-bottom: 1px solid #DDDDDD;
}
.border-sty{
    align-self: flex-end;
}
.prize-item-wrap:first-child{
    margin-top: 0;
}
.prize-img{
    font-size: 0;
}
.prize-img image{
    width:207rpx;
    height:155rpx;
    border-radius:10rpx;
    margin-right: 20rpx;
}
.coupon-img-bg{
    border-radius:10rpx;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
}
.coupon-wrap{
    border-radius:10rpx;
    width:207rpx;
    height:155rpx;
    background-color: #FFDAC5;
    margin-right: 20rpx;
    position: relative;
    left: 0;
    top: 0;
    text-align: center;
    color:rgba(230,0,57,1);
}
.coupon-text{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
}
.amount-num{
    font-size:36rpx;
    font-weight:600;
}
.coupon-type{
    font-size:28rpx;
    font-weight:400;
    margin-top: 10rpx;
}
.prize-dsc{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height:155rpx;
}
.prize-name{
    font-size:28rpx;
    font-weight:500;
    color:rgba(51,51,51,1);
    line-height: 1.7;
}
.prize_people_num{
    font-size:24rpx;
    font-weight:400;
    color:rgba(153,153,153,1);
}
.prize-date{
    font-size:24rpx;
    font-weight:400;
    color:rgba(153,153,153,1);
}
.grade-name{
    width:106rpx;
    height:36rpx;
    background:rgba(255,210,113,1);
    border-radius:24rpx 0 24rpx 0;
    color: #fff;
    text-align: center;
    line-height: 36rpx;
    font-size:24rpx;
    font-weight:500;
    display: flex;
    flex-direction: row;
    justify-content: center;
}
.area-empty-wrap{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 0;
    padding-top: 57px;
    padding-bottom: 20rpx;
}
.area-empty-img{
    width: 226rpx;
    height: 274rpx;
}
.area-empty-text{
    font-size:28rpx;
    font-weight:400;
    color:rgba(153,153,153,1);
    margin-top: 39rpx;
}