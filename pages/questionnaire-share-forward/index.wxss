.forward-wrap{
    padding: 30rpx 0;
}
.message-wrap{
    margin: 0 30rpx 0;
    font-size: 0;
    background:rgba(255,255,255,1);
    box-shadow:0px 6rpx 8rpx 0px rgba(240, 240, 240, 1);
    border-radius:24rpx;
}
.shop-image{
    width: 100%;
    border-radius: 24rpx 24rpx 0 0;
}
.msg-text-w{
    padding: 40rpx 30rpx;
}
.msg-text-t{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.dear-text{
    font-size:32rpx;
    font-weight:400;
    color:rgba(51,51,51,1);
}

.text-wrap{
    border-top: dashed 2rpx #DDDDDD;
    border-bottom: dashed 2rpx #DDDDDD;
    margin-top: 10rpx;
    position: relative;
    left: 0;
    top: 0;
}
.bottom-empty{
    position: absolute;
    left: 0;
    bottom: 0;
    background-color: #fff;
    height: 8rpx;
    width: 100%;
    z-index: 999;
}
.message-text{
    font-size:28rpx;
    font-weight:400;
    color:rgba(102,102,102,1);
    border-bottom: dashed 2rpx #DDDDDD;
    padding-bottom: 13rpx;
    line-height: 2.5;
}
.msg-text-b{
    display: flex;
    justify-content: flex-end;
    align-items: center;
    margin-top: 15rpx;
}
.nick-name{
    font-size:28rpx;
    font-weight:400;
    color:rgba(51,51,51,1);
}
.button-wrap{
    margin: 60rpx 30rpx 0;
    text-align: center;
}
.share-firend{
    width: 100%;
    height:88rpx;
    background:linear-gradient(0deg,rgba(244,26,80,1),rgba(230,0,57,1));
    box-shadow:0px 10rpx 10rpx 0rpx rgba(255,220,229,0.71);
    border-radius: 44rpx;
    text-align: center;
    color:#fff;
    line-height: 88rpx;
    font-size: 32rpx;
}
.circle-text{
    font-size:24rpx;
    font-weight:400;
    color:rgba(153,153,153,1);
    margin-top: 30rpx;
    display: inline-block;
}