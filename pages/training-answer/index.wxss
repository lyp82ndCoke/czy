/* 单选
 */
 .radio-group {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.radio-group label {
  position: relative;
  margin-bottom: 30rpx;
}

.radio-group radio {
  position: absolute;
  display: none;
  left: 0;
  top: 0;
}

.radio-group {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.checkbox-group label {
  position: relative;
}

.checkbox-group checkbox {
  position: absolute;
  display: none;
  left: 0;
  top: 0;
}

.lab-view {
  position: relative;
  margin-top: 28rpx;
  
}

.checkbox .sub-selection {
  position: relative;
  padding-left: 77rpx;
  font-size: 28rpx;
  line-height: 54rpx;
  font-weight: 400;
  color: #666;
}

.selection {
  display: block;
  font-size: 32rpx;
  /* line-height: 54rpx; */
  width: 100%;
  text-align: center;
  color: #666;
}

.selection-ios {
  position: absolute;
  font-size: 32rpx;
  color: #666;
  left: 17.5rpx;
  top: 4rpx;
}

.check {
  border: 1rpx solid #666;
  border-radius: 50%;
  width: 52rpx;
  line-height: 52rpx;
  position: absolute;
  left: 0;
  font-size: 0;
}

.selection-active {
  color: #fff;
}

.check-select {
  background: #f9bb14;
  border-color: #f9bb14;
}

.check-correct {
  background: #3c85ea;
  border-color: #3c85ea;
}

.check-fail {
  background: #e05961;
  border-color: #e05961;
}

.sub-selection-active {
  color: #f6b422 !important;
}

.sub-selection-correct {
  color: #3c85ea !important;
}

.sub-selection-fail {
  color: #e05961 !important;
}

.pub-img {
  width: 54rpx;
  height: 54rpx;
  z-index: 10;
  position: absolute;
  left: 0;
  top: 0;
}

.pub-img-c {
}

.swiper-ct swiper {
  height: 290rpx;
}

.slide-image {
  width: 100%;
  height: 290rpx;
}

.dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 50rpx;
  display: flex;
  justify-content: center;
}

.dots .dot {
  margin-right: 15rpx;
  width: 14rpx;
  height: 14rpx;
  background: rgba(0, 0, 0, 0);
  border-radius: 100%;
  border: 2rpx solid #fff;
  transition: all 0.1s;
}

.dots .dot.active {
  background: #fff;
}

.ft {
  /* height: 85rpx; */
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
  background: #f8f8f8;
  z-index: 11;
}

.ft text {
  margin: auto;
  width: 568rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: linear-gradient(180deg, #ffcb3c, #ffb741);
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.ft-text-grey {
  background: #d2cfc7 !important;
}

