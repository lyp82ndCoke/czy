.area-list-wrap{
    position: relative;
    left: 0;
    top: 0;
    height: 100%;
}
.area-list{
    padding-top: 30rpx;
    padding-bottom: 20rpx;
}
.area-item{
    margin: 20rpx 40rpx 0;
    background:rgba(255,255,255,1);
    box-shadow:0px 6rpx 8rpx 0px rgba(240,240,240,1);
    border-radius:24rpx;
}
.area-item:first-child{
    margin-top: 0;
}
.task-img-url{
    width: 207rpx;
    height: 155rpx;
    margin-right: 20rpx;
    border-radius: 10rpx;
}
.task-img-url image{
    width: 207rpx;
    height: 155rpx;
    border-radius: 10rpx;
}
.task_status{
    width:106rpx;
    height:36rpx;
    line-height: 36rpx;
    color: #fff;
    border-radius:24rpx 0 24rpx 0;
    font-size:24rpx;
    font-weight:500;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #fff;
}
.task-content{
    padding: 0 30rpx 40rpx;
    margin-top: 20rpx;
    font-size: 0;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.task-ing{
    background:rgba(230,0,57,1);
}
.task-wait{
    background:#FF9951;
}
.task-end{
    background-color: #CCCCCC;
}
.task-end2{
    background-color: #FFD271;
}
.task-item-right{
    display: flex;
    flex-direction: column;
    /* justify-content: flex-start; */
    justify-content: space-between;
    height: 155rpx;
}
.camp-times-name{
    font-size:28rpx;
    font-weight:500;
    color:rgba(51,51,51,1);
}
.join-people-num{
    font-size:24rpx;
    font-weight:400;
    color:rgba(153,153,153,1);
}
.task-time{
    font-size:24rpx;
    font-weight:400;
    color:rgba(102,102,102,1);
}
.area-empty-wrap{
    width: 100%;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 0;
}
.area-empty-img{
    width: 226rpx;
    height: 274rpx;
}
.area-empty-text{
    font-size:28rpx;
    font-weight:400;
    color:rgba(153,153,153,1);
    margin-top: 39rpx;
}