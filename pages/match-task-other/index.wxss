.other-info{
    background:linear-gradient(0deg,rgba(230,0,57,1) 0%,rgba(235,65,108,1) 100%);
    padding: 23rpx 0;
}
.padding-btm{
    padding-bottom: 30rpx;
}
.other-info-content{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    text-align: center;
}
.other-top-title{
    font-size:24rpx;
    font-weight:300;
    color:rgba(255,255,255,1);
}
.other-count-text{
    display: flex;
    justify-content: center;
    align-items: center;
}
.query-other-par{
    font-size:32rpx;
    font-weight:600;
    color:rgba(255,255,255,1);
    text-shadow:0px 2rpx 7rpx rgba(0, 0, 0, 0.2);
    margin: 0 50rpx;
}
.top-line{
    width:100rpx;
    height:1rpx;
    background:rgba(255,255,255,1);
}
.other-content{
    box-shadow:0px 11rpx 18rpx 0px rgba(234,234,234,1);
    border-radius:30rpx;
    margin: 30rpx 40rpx 0rpx;
}
.bbs-item {
    background: #fff;
    margin-top: 20rpx;
    background:rgba(255,255,255,1);
    box-shadow:0px 5rpx 10rpx 0rpx rgba(224,89,97,0.13);
    border-radius:30rpx;
    padding-bottom: 20rpx;
}
.bbs-item:first-child{
    margin-top: 0;
}
.other-head{
    display: flex;
    justify-content: start;
    align-items: center;
    flex-direction: row;
    padding: 30rpx 22rpx 20px;
    border-bottom: 1rpx solid #EEEEEE;
}
.user-icon{
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
    margin-right: 17rpx;
}
.nick-name{
    font-size:32rpx;
    font-weight:500;
    color:rgba(51,51,51,1);
}
.current-activity{
    background:rgba(255,210,113,1);
    border-radius:14rpx;
    font-size:24rpx;
    font-weight:400;
    color:rgba(255,255,255,1);
    text-align: center;
    padding: 0 10rpx;
    margin-top: 22rpx;
}
.bbs-item-text {
    margin-top: 20rpx;
    padding:0 30rpx;
    font-size:28rpx;
    font-weight:400;
    color:rgba(51,51,51,1);
}
.bbs-item-more {
    display: flex;
    justify-content: flex-end;
    font-size: 28rpx;
    font-weight: bold;
    align-items: center;
    margin-bottom: 20rpx;
    padding: 0 30rpx;
    color: #E6484D;
}
.bbs-item-more .fold-icon{
  font-weight: 100;
  margin-left: 10rpx;
  font-size: 30rpx;
  vertical-align: middle;
}
.bbs-item-imglist {
    margin: 30rpx auto 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    width: 600rpx;
}
.bbs-item-imglist-item {
    width: 200rpx;
    height: 160rpx;
    margin-bottom: 10rpx;
}
.bbs-item-imglist-item:nth-child(3n-1){
    margin: 0 10rpx;
}
.user-headimgurl{
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    margin-right: 17rpx;
}