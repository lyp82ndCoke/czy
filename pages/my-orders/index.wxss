/* pages/my-orders/index.wxss */
page{
  height: 100%;
  background-color: #fff;
}
.main {
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  flex-direction: column;
  height: 100%;
  padding: 20rpx 30rpx 0 30rpx;
  border-top: 1rpx solid #eeeeee  
}

.main-item {
  background: #fff;
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  margin-bottom: 20rpx
}

.main-item-bw {
  height: 91rpx;
  width: 100%;
  border-bottom: 1rpx solid #EEEEEE;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.main-item-bw-o {
  width: 100%;
  border-bottom: 1px solid #f8f8f8;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price-title {
  max-width: 500rpx;
  margin-left: 19rpx;
  color: #333333;
  font-size: 32rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-weight: 600
}

.price {
  margin-left: 30rpx;
  color: #ffbb00;
  font-size: 28rpx;
  margin-right: 29rpx;
  font-weight: bold;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end
}

.price text{
  font-size: 40rpx;
  line-height:40rpx;
}

.order {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  margin-left: 18rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.order-item {
  color: #333333;
  font-size: 24rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.order-item text{
  margin-right: 37rpx;
  letter-spacing: 1rpx;
  font-size: 28rpx;
}

.order-status {
  color: #e76976;
  margin-right: 30rpx;
  font-size: 30rpx;
}

