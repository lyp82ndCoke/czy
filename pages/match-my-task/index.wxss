.fixed-padding{
    padding-top: 101rpx;
}
.task-user-msg {
	background: rgba(255, 236, 230, 1);
	padding: 30rpx 51rpx 25rpx 48rpx;
}

.user-info-wrap {
	position: relative;
	left: 0;
	top: 0;
}

.task-user {
	width: 80%;
	margin-left: 23rpx;
}

.task-user-icon {
	width: 106rpx;
	height: 106rpx;
	border-radius: 50%;
}

.task-user-name {
	font-size: 36rpx;
	font-weight: 500;
	color: rgba(51, 51, 51, 1);
	line-height: 45rpx;
}

.user-rank-num {
	font-size: 24rpx;
	font-weight: 400;
	color: rgba(255, 255, 255, 1);
	line-height: 46rpx;
	width: 186rpx;
	height: 46rpx;
	background: linear-gradient(0deg, rgba(230, 0, 57, 1), rgba(242, 81, 121, 1));
	border-radius: 23rpx;
	text-align: center;
	position: absolute;
	right: 0;
	top: 10rpx;
}

.task-progress-title {
	text-align: right;
	color: rgba(153, 153, 153, 1);
	font-size: 20rpx;
}

.task-progress-text {
	font-weight: 400;
	color: #333;
}

.task-review {
	border: 1px solid transparent;
	border-radius: 5px;
	color: #777;
	display: flex;
	font-size: 12px;
	align-items: center;
}

.task-progress {
	background-color: rgba(100, 100, 100, 0.2);
	border-radius: 11rpx;
	position: relative;
	height: 22rpx;
	width: 100%;
}

.task-progress-done {
	background-color: #FF9951;
	border-radius: 11rpx;
	height: 22rpx;
	width: 0;
	transition: width 1s ease 0.3s;
	-ms-transition: width 1s ease 0.3s;
	-webkit-transition: width 1s ease 0.3s;
	-moz-transition: width 1s ease 0.3s;
}

.task-user-data {
	display: flex;
	width: 100%;
	margin-top: 32rpx;
}

.task-user-item {
	flex: 1;
	text-align: left;
	text-align: center;
}

.item-count-sty {
	font-size: 32rpx;
	font-weight: 500;
	color: rgba(51, 51, 51, 1);
}

.item-name-sty {
	font-size: 24rpx;
	font-weight: 400;
	color:rgba(102,102,102,1);
}
.task-list-content{
	padding-bottom: 19rpx;
}
.task-list-tab {
	background-color: #fff;
	display: flex;
	box-shadow: 0px 2rpx 4rpx 0rpx rgba(240, 240, 240, 1);
	margin-top: 20rpx;
}

.task-tab-item {
	flex: 1;
	text-align: center;
	height: 80rpx;
	line-height: 80rpx;
	font-size: 28rpx;
	font-weight: 400;
	color: #999999;
}

.tab-active-color {
	color: #E60039;
	position: relative;
	left: 0;
	top: 0;
}

.tab-active-color::after {
	content: ' ';
	width: 40rpx;
	height: 6rpx;
	border-radius: 3rpx;
	background-color: #E60039;
	line-height: normal;
	position: absolute;
	bottom: -6rpx;
	left: 50%;
	transform: translateX(-50%);
	-ms-transition: translateX(-50%);
	-webkit-transition: translateX(-50%);
	-moz-transition: translateX(-50%);
}

.task-list-card {
	box-shadow: 0px 8rpx 8rpx 0px rgba(240, 240, 240, 1);
	border-radius: 0 0 24rpx 24rpx;
	margin: 20rpx 28rpx 0;
}
.image-list{
	padding: 0 23rpx;
}

.list-item-card {
	border-radius: 20rpx;
	padding: 0 0 29rpx;
	margin-bottom: 20rpx;
  background: #fff;
}

.list-item-card:first-child {
	margin-top: 0;
}

.item-tag {
	width: 106rpx;
	height: 36rpx;
	background: rgba(255, 210, 113, 1);
	border-radius: 20rpx 0 20rpx 0;
	text-align: center;
	line-height: 36rpx;
	color: #fff;
	font-size: 24rpx;
	font-weight: 500;
}
.res-status-sty{
	font-size:20rpx;
	font-weight:400;
	color:rgba(153,153,153,1);
	margin: 0 29rpx 0 12rpx;
}
.is-open-sty{
	font-size: 30rpx;
	color: #999;
	vertical-align: middle;
}
.is-open-right{
	display: flex;
}

.item-content {
	padding: 0 23rpx;
}

.item-content-dsc {
	font-size: 24rpx;
	font-weight: 400;
	color: rgba(102, 102, 102, 1);
	margin: 30rpx 0 19rpx 0;
}

.task-feel-content {
	font-size: 28rpx;
	font-weight: 400;
	color: rgba(51, 51, 51, 1);
	border-top: 1rpx solid rgba(221, 221, 221, 1);
	padding-top: 39rpx;
}

.item-details-auto {
	height: auto;
}

.bbs-item-more {
	display: flex;
	justify-content: flex-end;
	font-size: 28rpx;
	font-weight: bold;
	align-items: center;
	margin-bottom: 20rpx;
	color: #E6484D;
}

.fold-icon {
	font-weight: 100;
	margin-left: 10rpx;
	font-size: 30rpx;
	vertical-align: middle;
}

.bottom-btn {
	margin: 10rpx 0 0 19rpx;
	justify-content: space-between;
}

.icon-wrap {
	margin-right: 20rpx;
}

.zan-comment-num {
	font-size: 20rpx;
	font-weight: 400;
	color: rgba(153, 153, 153, 1);
}

.icon-zan-pinlun {
	font-size: 25rpx;
	margin-right: 10rpx;
	color: rgba(153, 153, 153, 1);
}
.active-zan{
	color: #E60039;
}
.tab-fixed{
    margin-top: 0rpx !important;
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
}

.dialog-wrap{
    width: 100%;
    height: 100%;
    background:rgba(0,0,0,.6);
    position: fixed;
    left: 0;
    top: 0;
    z-index: 999;
}
.dialog-wrap-center{
    width:540rpx;
    margin: 240rpx auto 0;
    text-align: center;
}
.close-wrap-t{
    display: flex;
    justify-content: flex-end;
}
.colse_wrap{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 50rpx;
}
.guanbi-popup-sty{
    color: rgba(153, 153, 153, .35);
    font-size: 40rpx;
    margin-bottom: -5rpx;
}
.guanbi-line{
    height: 60rpx;
    width: 2rpx;
    background-color: rgba(153, 153, 153, .35);
}
.dialog-top-wrap{
    background-color: #fff;
    border-radius: 20rpx;
    padding-top: 30rpx;
}
.light-bulb-img{
    width: 25rpx;
    height: 39rpx;
    margin-right: 20rpx;
}
.dialog-title{
    font-size:32rpx;
    font-weight:500;
    color:rgba(51,51,51,1);
}
.dialog-content{
    font-size:28rpx;
    font-weight:400;
    color:rgba(102,102,102,1);
}
.dialog-share-btn{
    width:540rpx;
    height:80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    background:rgba(230,0,57,1);
    border-radius:0px 0px 20rpx 20rpx;
}
.task-not-open{
    margin-top: 48rpx;
}
.dialog-share-btn{
    margin-top: 55rpx;
}
.area-empty-wrap{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 0;
    padding-top: 57px;
    padding-bottom: 20rpx;
}
.area-empty-img{
    width: 226rpx;
    height: 274rpx;
}
.area-empty-text{
    font-size:28rpx;
    font-weight:400;
    color:rgba(153,153,153,1);
    margin-top: 39rpx;
}
