/* pages/training-check-in/index.wxss */
.container{
  padding-bottom: 30rpx;
}
.wrapper {
  width: 100%;
}

.date-hd {
  width: 690rpx;
  margin: 20rpx auto 0;
}

.list {
  padding: 20rpx 30rpx;
}

.item {
  width: 100%;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0 5rpx 10rpx 0rpx rgba(246, 184, 34, 0.13);
  border-radius: 8rpx;
}


.item-hd {
  background: #f24a5d;
  border-radius: 8rpx 8rpx 0px 0px;
}

.item-hd>text {
  display: block;
  width: 144rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  letter-spacing: 3rpx;
  border-radius: 8rpx 0 22rpx 0;
  font-size: 22rpx;
  color: #fff;
  background: #fcc44d;
  opacity: 0.9;
}

.item-hd>view {
  padding: 24rpx 30rpx 27rpx 30rpx;
}

.item-hd .title {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
}

.sign-explain {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  opacity: 0.8;
}

.item-ct {
  height: 198rpx;
  padding: 0 30rpx;
  position: relative;
}

.lt-ct .title {
  font-weight: 500;
  font-size: 32rpx;
  color: #333;
}

.lt-ct .title text {
  font-weight: 600;
  font-size: 36rpx;
  color: #f24a5d;
}

.sub-title {
  font-size: 24rpx;
  font-weight: 400;
  color: #999;
  margin-top: 5rpx;
}
.go-income{
  display: inline;
  margin-left: 15rpx;
  color: #7e72c6;
  font-size: 24rpx;
  font-weight: 400;
  background-color: #fff;
  padding: 0;
}
.go-income::after{
  border: none;
  outline: none;
  
}
.sub-title-icon {
  margin-left: 10rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #999;
  margin-top: 5rpx;
}

.rt-ct {
  border-radius: 26rpx;
  width: 160rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 400;
  color: #fff;
}

.sign-end{
  background: #999!important
}

.sign {
  background: linear-gradient(180deg, #ffba00, #ffa500);
}

.sign-active {
  background: linear-gradient(180deg, #ffd669, #ffc96c);
}

.my-income {
  color: #3c85ea;
}

.date-ct {
  width: 690rpx;
  height: auto;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0 3rpx 16rpx 0 rgba(123, 113, 94, 0.14);
  border-radius: 12rpx;
  margin: 20rpx auto 15rpx;
}

.date-select {
  height: 85rpx;
  padding: 0 130rpx;
  border-bottom: 1rpx solid #eee;
}

.year {
  margin-right: 62rpx;
}

.year image, .month image {
  width: 14rpx;
  height: 20rpx;
  padding: 15rpx;
}

.year input, .month input {
  width: 150rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  text-align: center;
}

.date-item {
  height: 70rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.date-item text:nth-child(7), .date-item text:nth-child(6) {
  color: #999;
}

/* 周 */

.box-flex {
  display: flex;
  flex-wrap: wrap;
}

.box-padding {
  padding-top: 30rpx;
}

.show-stars {
  color: #333;
  font-size: 25rpx;
  padding: 25rpx;
  border-top: 1rpx solid #f6f6f6;
  text-align: center;
  letter-spacing: 1.5rpx
}

.flex-item {
  flex-flow: nowrap;
  flex-grow: 1;
  flex-shrink: 1;
  width: 14.2%;
}

.flex-item-margin {
  margin-bottom: 35rpx;
}

.item-content {
  padding: 20rpx 35rpx;
  text-align: center;
  color: #333;
  font-size: 28rpx;
  position: relative;
  white-space: nowrap;
}

.star-icon, .corr-icon {
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  left: 43%;
  z-index: 1;
}

.star-icon {
  margin: auto;
  width: 16rpx;
  height: 16rpx;
  top: 2rpx;
  /* left: 38rpx; */
}

.star-icon {
  /* top: 10rpx; */
}

.corr-icon {
  bottom: 8rpx;
}

.item-content-current-day {
  flex-grow: 2;
}

.bg-color-active {
  background: #fffbf3;
}

/* 已签到吐丝 */

.already-sign {
  position: absolute;
  width: 382rpx;
  height: 79rpx;
  text-align: center;
  line-height: 79rpx;
  background: rgba(0, 0, 0, 0.68);
  font-size: 28rpx;
  font-weight: 400;
  color: #fff;
  top: 7rpx;
  left: 158rpx;
}

.subSignin{
  position: fixed;
  width: 80%;
  left: 9%;
  top: 40%;
  padding: 20rpx 1%;
  text-align: center;
  line-height: 48rpx;
  background: rgba(0, 0, 0, 0.68);
  font-size: 28rpx;
  font-weight: 400;
  color: #fff;
  z-index: 999999;
  border-radius: 12rpx
}

.date-ft {
  position: fixed;
  width: 100%;
  height: 68rpx;
  padding: 50rpx 0 90rpx 0;
  left: 0;
  right: 0;
  bottom: 0;
  text-align: center;
  line-height: 68rpx;
  z-index: 99;
  background: #f8f8f8;
  font-size: 28rpx;
  letter-spacing: 1rpx;
}

.ft-lt {
  width: 220rpx;
  height: 68rpx;
  margin-right: 80rpx;
  border: 1px solid rgba(102, 102, 102, 1);
  border-radius: 34rpx;
  color: #666;
}

.ft-lt-btn {
  font-size: 28rpx;
  margin-left: 0;
  width: 222rpx;
  height: 70rpx;
}

.ft-rt button {
  width: 222rpx;
  height: 70rpx;
  background: linear-gradient(180deg, #ffba00, #ffa500);
  border-radius: 34rpx;
  color: #fff;
  text-align: center;
  line-height: 68rpx;
  font-size: 28rpx;
}

.bill {
  width: 100%;
  height: 100%;
  background: #fff;
  z-index: 999;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
}

.bill canvas {
  width: 300rpx;
  height: 300rpx;
}

/* 海报弹层 */

.pup {
  width: 100%;
  height: 100%;
  background: #fff;
  border-top: 1rpx solid #e5e5e5;
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  z-index: 9999;
}

.hd {
  margin-top: 30rpx;
  width: 570rpx;
  height: 900rpx;
  box-shadow: 5px 4px 13px 0px rgba(246, 126, 85, 0.19);
  border-radius: 12px;
  position: relative;
  padding-bottom: 55rpx;
}

.hd image {
  width: 100%;
  height: 806rpx;
}

.hd text {
  position: absolute;
  left: 64rpx;
  bottom: 56rpx;
  font-size: 28rpx;
  color: rgba(19, 19, 19, 1);
}

.ft image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.ft text {
  font-size: 28rpx;
  color: rgba(102, 102, 102, 1);
  margin: 36rpx 0 40rpx 0;
}
.bottom-text{
  font-size: 24rpx;
font-weight: 400;
padding: 10rpx 0;
color: #999;
text-align: center;

}
.sign-explain-pup {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 999;
}

.pup-wrapper {
  width: 620rpx;
  background: #fff;
  border-radius: 16rpx;
}

.pup-hd {
  padding: 0 30rpx 0 50rpx;
  height: 101rpx;
  background: #f6f9fe;
  border-bottom: 1rpx solid #dce0e4;
  border-radius: 16rpx 16rpx 0 0;
}

.pup-hd text {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  letter-spacing: 2rpx;
}

.pup-hd image {
  width: 28rpx;
  height: 28rpx;
}

.pup-ct {
  height: 300rpx;
  padding: 50rpx;
}

.pup-ct>view {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  position: relative;
}

.grey-dot {
  width: 11rpx;
  height: 11rpx;
  border-radius: 100%;
  background: #999;
  margin-right: 20rpx;
}

.pup-ct>view text {
  width: 485rpx;
  font-size: 28rpx;
  line-height: 47rpx;
  font-weight: 400;
  color: #999;
  position: relative;
  margin-top: -20rpx;
}

.pup-item {
  margin-bottom: 50rpx;
}
