/**index.wxss**/

@import '../../css/goodsItem.wxss';


.bbs-item {
    background: #fff;
    margin: 20rpx auto ;
    width:690rpx;
background:rgba(255,255,255,1);
box-shadow:0px 5rpx 10rpx 0rpx rgba(224,89,97,0.13);
border-radius:30rpx;

}

.bbs-item-head {
    display: flex;
    border-bottom: 1rpx solid rgba(238,238,238,1);
    justify-content: flex-start;
    align-items: center;
    padding: 30rpx;

}

.bbs-item-head-avea {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.bbs-item-head-desc-nickname {
    font-weight: bold;
    font-size: 30rpx;
    margin-bottom: 10rpx;
}

.bbs-item-head-desc-time {
    font-size: 26rpx;
    color: #999;
}

.bbs-item-text-con {
  font-size: 26rpx;
  text-align: justify;
  line-height:50rpx;
  letter-spacing:1px;
  word-break: break-all;
}

.bbs-item-text {
    margin: 20rpx 0rpx 0;
    /* height: 70rpx; */
    padding:  0 30rpx;
    /* height:100rpx; */
}

.bbs-item-text-auto {
    height: auto;
}

.bbs-item-more {
    display: flex;
    justify-content: flex-end;
    font-size: 28rpx;
    font-weight: bold;
    align-items: center;
    margin-bottom: 20rpx;
    padding: 0 30rpx;
    color: #E6484D;
}


.bbs-item-more .fold-icon{
  font-weight: 100;
  margin-left: 10rpx;
  font-size: 30rpx;
  vertical-align: middle;
}

.bbs-item-imglist {
  margin: auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    width: 620rpx;
}


.bbs-item-imglist-item {
    width: 200rpx;
    height: 160rpx;
    margin-bottom: 20rpx;
    
}
.bbs-item-imglist-item:nth-child(3n-1){
  margin: 0 10rpx;
}
.release-notes {
  width: 160rpx;
  height: 160rpx;
  position: fixed;
  right: 0;
  bottom: 320rpx;
  z-index: 300
}

.release-notes image {
  width: 160rpx;
  height: 160rpx;
}
.user_add_class-fixed{
    width: 160rpx;
  height: 160rpx;
  position: fixed;
  right: 0;
  bottom: 160rpx;
  z-index: 400
}

.user_add_class-fixed image{
  width: 160rpx;
  height: 160rpx;
  position: relative
}


.user_add_class
{
  width: 160rpx;
  height: 160rpx;
position: absolute;
right: 0;
top: 0;
z-index: 1;
background: rgb(0, 0, 0,0)
}
.user_add_class::after{
  border: none;
}
.btn-agree{
  border-top: 1rpx solid rgba(238,238,238,1);
    padding: 20rpx 30rpx;
    display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  position: relative;
  color: #999999;

}
.btn-agree image{
    width: 29rpx;
    height: 29rpx;
    margin-right: 10rpx;
}
.icon-wrap{
  margin: 0 25rpx;
}




.kong {
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    padding: 25vh 0;
    margin-top: 20rpx;
    flex-direction: column;
    font-size:30rpx;

}

.kong image { 
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 20rpx;
}
.zan-icon{
  margin-right: 10rpx;
   /* vertical-align: middle; */
  font-size: 28rpx;
  
}
.message-icon{
    margin-right: 10rpx;
  font-size: 28rpx;
   vertical-align: middle;
}
.zan-icon-true{
  color: #E6484D;
}
