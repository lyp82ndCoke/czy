/* 关注与未关注 */

.attention {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 750rpx;
  /* height: 200rpx; */
  background: rgba(255, 255, 255, 1);
}

.attention .specal-image {
  width: 96rpx;
  height: 96rpx;
  border: 1rpx solid rgba(247, 186, 5, 1);
  border-radius: 50%;
}

.attention text {
  margin-top: 5rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(249, 187, 20, 1);
}

