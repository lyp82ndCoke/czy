.fixed-padding{
    padding-top: 101rpx;
}
.task-head{
    height:145rpx;
    background:linear-gradient(0deg,rgba(230,0,57,1) 0%,rgba(242,81,121,1) 100%);
    display: flex;
    justify-content: center;
    align-items: center;
}
.head-title{
    width:150rpx;
    height: 1rpx;
    background-color: #fff;
}
.daily-task-top{
    font-size:32rpx;
    font-weight:600;
    color:rgba(255,255,255,1);
    text-shadow:0px 2rpx 7rpx rgba(0, 0, 0, 0.2);
    text-align: center;
    margin: 0 21rpx;
}
.task-area-tab{
    display: flex;
    margin-top: 21rpx;
    /* height:80px; */
    background:rgba(255,255,255,1);
    box-shadow:0px 8rpx 8rpx 0px rgba(240,240,240,1);
}
.task-tab-item{
    flex: 1;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    font-size:28rpx;
    font-weight:400;
    color: #999999;
}
.tab-active-color{
    color:#E60039;
    position: relative;
    left: 0;
    top: 0;
}
.tab-active-color::after{
    content:' ';
    width: 40rpx;
    height: 6rpx;
    border-radius: 3rpx;
    background-color: #E60039;
    line-height: normal;
    position: absolute;
    bottom: -6rpx;
    left: 50%;
    transform: translateX(-50%);
    -ms-transition: translateX(-50%);
    -webkit-transition: translateX(-50%);
    -moz-transition: translateX(-50%);
}
.task-area-content{
    padding: 29rpx 32rpx;
}
.task-item{
    background-color: #fff;
    border-radius:20px;
    margin-top: 20rpx;
    box-shadow:0px 8rpx 8rpx 0px rgba(240,240,240,1);
}
.task-item:first-child{
    margin-top: 0;
}
.task-item-top{
    padding: 30rpx 28rpx 19rpx;
    border-bottom:1rpx solid #DDDDDD;
}
.item-user-info image{
    width:82rpx;
    height:82rpx;
    border-radius:50%;
    margin-right: 29rpx;
}
.user-nickname-rank{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 82rpx;
}
.nick-name-sty{
    font-size:32rpx;
    font-weight:500;
    color:rgba(51,51,51,1);
}
.rank-num-sty{
    font-size:24rpx;
    font-weight:400;
    color:rgba(153,153,153,1);
}
.zan-share-finish{
    display: flex;
    font-size:24rpx;
    font-weight:400;
    color:rgba(153,153,153,1);
    margin-top: 27rpx;
}
.item-botoom{
    flex: 1;
    text-align: center;
}
.item-tag-left{
    text-align: left;
}
.item-tag-right{
    text-align: right;
}
.text-num-color{
    color: #666666;
}
.task-item-bottom{
    padding: 29rpx 29rpx 30rpx;
}
.task-user-detail{
    font-size:28rpx;
    font-weight:500;
    color:#333;
    line-height: 1.5;
}
.selected-sty{
    color: #FF9951;
}
.task-dsc{
    line-height: 1.5;
    font-size:24rpx;
    font-weight:400;
    color:rgba(153,153,153,1);
    padding: 13rpx 25rpx;
    background:rgba(248,248,248,1);
    /* margin-top: 20rpx; */
}
.bottom-num{
    margin-top: 20rpx;
}
.view-count-num, .icon-num-right{
    font-size:20rpx;
    font-weight:400;
    color:rgba(153,153,153,1);
}
.item-view-num, .comment-count-num, .valid-zan-nums{
    vertical-align: middle;
}
.liulan-sty{
    font-size: 30rpx;
    vertical-align: middle;
    margin-right: 10rpx;
}
.dianzan-sty{
    font-size: 30rpx;
    margin-right: 10rpx;
    vertical-align: middle;
}
.dianzan-active{
    font-size: 25rpx;
    color:#E60039;
}
.pinlun-sty{
    font-size: 30rpx;
    margin-right: 10rpx;
