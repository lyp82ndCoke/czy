.answer-wrap{
    padding: 30rpx 32rpx;
}
.answer-center{
    box-shadow:0px 8px 8px 0px rgba(240,240,240,1);
    border-radius:24rpx;
    background-color: #fff;
}
.answer-top{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 46rpx 28rpx 0;
}
.question-index{
    font-size:48rpx;
    font-weight:500;
    color:rgba(255,153,81,1);
}
.question-num{
    font-size:24rpx;
    color:#999;
}
.use-time{
    font-size:28rpx;
    font-weight:400;
}
.wait-sty{
    font-size: 35rpx;
    margin-right: 20rpx;
}
.answer-top-right{
    display: flex;
    align-items: center;
    justify-content: center;
    color:rgba(153,153,153,1);
}
.question-item{
    padding: 0 26rpx;
    margin-top: 64rpx;
}
.question-title{
    font-size:32rpx;
    font-weight:500;
    color:rgba(51,51,51,1);
}
.answer-list{
    margin-top: 59rpx;
}
.lab-view{
    display: flex;
    align-items: center;
    margin-top: 50rpx;
}
.un-check{
    align-self: baseline;
    width:45rpx;
    height:45rpx;
    border:1rpx solid rgba(102,102,102,1);
    border-radius:50%;
    text-align: center;
    line-height: 45rpx;
    font-size:28rpx;
    font-weight:400;
    color:rgba(102,102,102,1);
    margin-right: 21rpx;
}
.active-number{
    background:rgba(255,153,81,1);
    border:none;
    color: #fff;
}
.sub-selection{
    width: calc(100% - 66rpx);
    font-size:28rpx;
    font-weight:400;
    line-height: 1.5;
    color:rgba(102,102,102,1);
}
.active-content{
    color:rgba(255,153,81,1);
}
.checkbox{
    margin-top: 50rpx;
}
.checkbox:first-child{
    margin-top: 0rpx !important;
}
.bottom-wrap{
    margin-top: 150rpx;
    padding-bottom: 20rpx;
}
.next-question{
    width:480rpx;
    height:88rpx;
    background:rgba(230,0,57,1);
    border-radius:44rpx;
    margin: 0 auto;
    font-size:32rpx;
    font-weight:500;
    color:rgba(255,255,255,1);
    text-align: center;
    line-height: 88rpx;
}
.bottom-text{
    font-size:24rpx;
    font-weight:400;
    color:rgba(153,153,153,1);
    margin-top: 20rpx;
    text-align: center;
}