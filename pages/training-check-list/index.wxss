/* pages/training-check-list/index.wxss */
.wrapper {
  height: 100%;
  width: 100%;
  overflow: auto;
  letter-spacing: 1rpx;
  background: #f8f8f8;
}

.list {
  padding: 20rpx 30rpx;
}

.item {
  width: 100%;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0 5rpx 10rpx 0rpx rgba(246, 184, 34, 0.13);
  border-radius: 8rpx;
  margin-bottom: 30rpx;
}

.item-hd {
  background: #f24a5d;
  border-radius: 8rpx 8rpx 0px 0px;
}

.item-hd>text {
  display: block;
  width: 144rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  letter-spacing: 3rpx;
  border-radius: 8rpx 0 22rpx 0;
  font-size: 22rpx;
  color: #fff;
  background: #fcc44d;
  opacity: 0.9;
}
.icon-guanbi{
  font-size: 24rpx;
}

.item-hd>view {
  padding: 24rpx 30rpx 27rpx 30rpx;
}

.item-hd .title {
  width: 500rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
}

.sign-explain {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  opacity: 0.8;
}

.item-ct {
  height: 198rpx;
  padding: 0 30rpx;
  position: relative;
}
.sign-end{
  background: #999!important
}

.lt-ct .title {
  font-weight: 500;
  font-size: 32rpx;
  color: #333;
}

.lt-ct .title text {
  font-weight: 600;
  font-size: 36rpx;
  color: #f24a5d;
}

.sub-title {
  font-size: 24rpx;
  font-weight: 400;
  color: #999;
  margin-top: 5rpx;
}

.income-title {
  color: #3c85ea;
}

.rt-ct {
  border-radius: 26rpx;
  width: 160rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 400;
  color: #fff;
}

.sign {
  background: linear-gradient(180deg, #ffba00, #ffa500);
}

.sign-active {
  background: linear-gradient(180deg, #ffd669, #ffc96c);
}

.my-income {
  color: #3c85ea;
}

/* 已签到吐丝 */

.already-sign {
  position: absolute;
  width: 382rpx;
  height: 79rpx;
  text-align: center;
  line-height: 79rpx;
  background: rgba(0, 0, 0, 0.68);
  font-size: 28rpx;
  font-weight: 400;
  color: #fff;
  top: 7rpx;
  left: 158rpx;
}

/* 弹层样式 */

.sign-explain-pup {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 999;
}

.pup-wrapper {
  width: 620rpx;
  background: #fff;
  border-radius: 16rpx;
}

.pup-hd {
  padding: 0 30rpx 0 50rpx;
  height: 101rpx;
  background: #f6f9fe;
  border-bottom: 1rpx solid #dce0e4;
  border-radius: 16rpx 16rpx 0 0;
}

.pup-hd text {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  letter-spacing: 2rpx;
}

.pup-hd image {
  width: 28rpx;
  height: 28rpx;
}

.pup-ct {
  height: 300rpx;
  padding: 50rpx;
}

.pup-ct>view {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  position: relative;
}

.grey-dot {
  width: 11rpx;
  height: 11rpx;
  border-radius: 100%;
  background: #999;
  margin-right: 20rpx;
}

.pup-ct>view text {
  width: 485rpx;
  font-size: 28rpx;
  line-height: 47rpx;
  font-weight: 400;
  color: #999;
  position: relative;
  margin-top: -20rpx;
}

.pup-item {
  margin-bottom: 50rpx;
}

.main1 {
  border-top: 50rpx solid #e5e5e5;
  position: fixed;
  width: 100%;
}
