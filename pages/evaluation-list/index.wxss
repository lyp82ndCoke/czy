.evaluation-wrap{
    padding: 22rpx 0;
}
.list-wrap{
    margin: 0 32rpx;
    background-color: #fff;
    background:rgba(255,255,255,1);
    box-shadow:0px 8rpx 8rpx 0px rgba(239,239,239,1);
    border-radius:24rpx;
}
.list-top{
    padding: 39rpx 0 0 28rpx;
}
.top-title{
    font-size:32rpx;
    font-weight:500;
    color:rgba(51,51,51,1);
    border-left: 4rpx solid #FF9951;
    padding-left: 20rpx;
    height: 27rpx;
    line-height: 27rpx;
}
.top-dsc{
    font-size:24rpx;
    font-weight:400;
    color:rgba(153,153,153,1);
    margin-top: 20rpx;
}
.evalua-list{
    padding: 0 28rpx 20rpx;
}
.evalua-item{
    background:rgba(248,248,248,1);
    border-radius:20rpx;
    margin-top: 20rpx;
}
.evalua-item:first-child{
    margin-top: 31rpx !important;
}
.evalua-status{
    width:106rpx;
    height:36rpx;
    background:rgba(255,210,113,1);
    border-radius:20rpx 0 20rpx 0rpx;
    line-height: 36rpx;
    text-align: center;
    font-size:24rpx;
    font-weight:500;
    color:rgba(255,255,255,1);
}
.no-start{
    background-color: #FF9951 !important;
}
.end-bgc{
    background-color: #CCCCCC !important;
}
.have-report{
    background-color: #E60039 !important;
}
.icon-sty{
    font-size: 30rpx;
    margin-right: 20rpx;
}
.evalue-info{
    padding: 0 26rpx;
    margin-top: 25rpx;
}
.evalue-info-content{
    margin-top: 23rpx;
    font-size:28rpx;
    font-weight:400;
    color:rgba(51,51,51,1);
    line-height: 1.5;
}
.evalue-info-top{
    font-size:24rpx;
    font-weight:400;
    color:rgba(102,102,102,1);
}
.click-btn{
    width:100%;
    height:68rpx;
    background:rgba(255,153,81,1);
    border-radius:0px 0px 20rpx 20rpx;
    line-height: 68rpx;
    text-align: center;
    color: #fff;
    margin-top: 43rpx;
}